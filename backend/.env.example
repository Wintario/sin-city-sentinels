# Сервер
NODE_ENV=production
PORT=3000

# База данных (путь к файлу SQLite)
DB_PATH=./data/app.db

# JWT настройки
# ВАЖНО: Измени JWT_SECRET на длинную случайную строку в production!
JWT_SECRET=your_super_secret_key_change_this_on_production_minimum_32_chars
JWT_EXPIRE=7d

# CORS (укажи домен фронтенда или * для разработки)
CORS_ORIGIN=*

# Логирование
LOG_LEVEL=info
